// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  provider String
  thirdPartyId String?
  email String? @unique
  password String?
  displayName String?
  picture String?
  todos Todo[]
}

model Todo {
  id String @id
  text String
  ddl DateTime
  complete Int // 1: Not Down, 2: Down, 3: Deleted
  priority Int // 1: Low, 2: Medium, 3: High
  user User @relation(fields: [userId], references: [id])
  userId String
}


model Photo {
  id String @id @unique
  width Int
  height Int
  alt_description String
  urls Url[]
  photographer Photographer @relation(fields: [photographerId], references: [id])
  photographerId String
}

model Photographer {
  id String @id
  username String
  name String
  photos Photo[]
}

model ProfileImage {
  id String @id @default(uuid())
  format String
  link String
}

model Url {
  id String @id @default(uuid()) 
  format String
  link String @db.LongText
  photo Photo @relation(fields: [photoId], references: [id], onDelete: Cascade)
  photoId String
}

model Cat {
  id Int @id @default(autoincrement())
  name String
  age Int
}